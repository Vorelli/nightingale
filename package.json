{
  "name": "nightingale",
  "version": "0.3.0",
  "description": "A personal radio server. Stream from anywhere",
  "main": "npm test",
  "scripts": {
    "b": "webpack -w --mode production",
    "build": "webpack --mode production",
    "build:back": "tsc -b",
    "dev": "webpack serve",
    "migrate_db": "drizzle-kit generate:sqlite --out $MUSIC_DIR/migrations-folder --schema server/db/schema.ts --breakpoints",
    "start": "npm run migrate_db && node ./dist/index.js",
    "start:dev": "bunx dotenv-cli -- bun server/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Vorelli/nightingale.git"
  },
  "keywords": [
    "music",
    "streaming",
    "server"
  ],
  "author": "Natale Toscano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Vorelli/nightingale/issues"
  },
  "homepage": "https://github.com/Vorelli/nightingale#readme",
  "dependencies": {
    "@vorelli/music-metadata": "8.1.43",
    "better-sqlite3": "^8.7.0",
    "compression": "^1.7.4",
    "connect-pg-simple": "^8.0.0",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.17.6",
    "drizzle-orm": "^0.25.4",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-session-sqlite": "^2.1.1",
    "express-ws": "^5.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "get-audio-duration": "^3.1.1",
    "md5-file": "^5.0.0",
    "morgan": "^1.10.0",
    "sharp": "^0.32.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.5.0",
    "@types/better-sqlite3": "^7.6.5",
    "@types/compression": "^1.7.2",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/express-ws": "^3.0.1",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/ws": "^8.5.4",
    "bun-types": "^1.0.15",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "latest",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-jest-resolver": "^2.0.1",
    "tsx": "4.0",
    "typescript": "^5.0.4"
  },
  "type": "module"
}
